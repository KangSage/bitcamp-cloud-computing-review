<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
        
    <!-- 프로퍼티 설정하기 = 셋터 호출하기 -->
    
    <bean id="c1" class="bitcamp.cloud.step04.Car">
        <property name="model"><value type="java.lang.String">티코</value></property>
        <property name="maker"><value type="java.lang.String">비트자동차</value></property>
        <property name="cc"><value type="int">890</value></property>
    </bean>
    
    <!-- 위의 설정의 자바 코드로 표현:
        Car c1 = new Car();
        c1.setModel("티코");
        c1.setMaker("비트자동차");
        c1.setCc(Integer.parseInt("890"));
        
        objPool.put("c1", c1);
     -->
    
</beans>